@page
@model Real_Estate_WebApp.Pages.SearchResultsModel
@{
}

<!-- Property List Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-0 gx-5 align-items-end">
            <div class="col-lg-6">
                <div class="text-start mx-auto mb-5 wow slideInLeft" data-wow-delay="0.1s">
                    <h1 class="mb-3">Searched Properties</h1>
                </div>
            </div>
        </div>
        <div class="tab-content">
            <div id="tab-1" class="tab-pane fade show p-0 active">
                <div class="row g-4">
                    @if(ViewData["flag"]=="true")
                    {
                    <!--This is Sale Card-->
                    @foreach (var item in Model.SearchedProperties)
                    {
                        <!---Card Start-->
                        <div class="col-lg-4 col-md-6">
                            <div class="property-item rounded overflow-hidden">
                                <div class="position-relative overflow-hidden">
                                    <a href=""><img height="250px" src="~/uploaded_images/@item.image" alt=""></a>
                                    <div class="bg-primary rounded text-white position-absolute start-0 top-0 m-4 py-1 px-3">@item.Category</div>
                                    <div class="bg-white rounded-top text-primary position-absolute start-0 bottom-0 mx-4 pt-1 px-3">@item.PropertyType</div>
                                </div>
                                <div class="p-4 pb-0">
                                    <h5 class="text-primary mb-3">PKR @item.Price</h5>
                                    <a class="d-block h5 mb-2" href="">@item.Title</a>
                                    <p><i class="fa fa-map-marker-alt text-primary me-2"></i>@item.Address</p>
                                </div>
                                <div class="d-flex border-top">
                                    <small class="flex-fill text-center border-end py-2"><i class="fa fa-ruler-combined text-primary me-2"></i>@item.Area Sqft</small>
                                    <small class="flex-fill text-center border-end py-2"><i class="fa fa-bed text-primary me-2"></i>@item.Number_of_Bedrooms Bed</small>
                                    <small class="flex-fill text-center py-2"><i class="fa fa-bath text-primary me-2"></i>@item.Number_of_Baths Bath</small>
                                </div>
                            </div>
                        </div>
                        <!---Card End-->
                        }
                    }
                    else
                    {
                        <h2>No Record found</h2>
                    }

                </div>
            </div>

            <!--Tab One Ends Here-->

        </div>
    </div>
</div>
<!-- Property List End -->