@page
@model Real_Estate_WebApp.Pages.Admin.ShowTestimonialsModel

@{
    ViewData["Title"] = "ShowTestimonials";
}

<h1>ShowTestimonials</h1>

<p>
    <a class="btn btn-primary" asp-page="AddTestimonial">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Testimonial[0].Review)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Testimonial[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Testimonial[0].Profession)
            </th>
            <th>

                @Html.DisplayNameFor(model => model.Testimonial[0].Image)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Testimonial) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Review)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Profession)
            </td>
            <td>
                <img src="~/uploaded_images/@item.Image"  height="120px" width="120px"/>
            </td>
            <td>
                <a class="btn btn-danger" asp-page="./DeleteTestimonial" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
